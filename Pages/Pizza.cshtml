@page
@model Pizza

<div class="text-center">
    <h1 class="display-4 text-capitalize text-black">Our great selection of pizzas!</h1>
    <h4>No need to give us any personal info!</h4>
    <h4>We already need everything!</h4>
    <p class="small-text">
        <i>Only 1 pizza per order</i>
    </p>

    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwn">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" alt="No image found" class="w-100">
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align: left;">
                                Create your own Pizza
                            </h3>
                            <p style="text-align: left">
                                Make you own pizza with our pizza configurator!
                            </p>
                            <a asp-area="" asp-page="/Forms/CustomPizza" class="btn btn-primary float-start">
                                Try now
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var pizza in Model.fakePizzaDb)
            {
                var imagePath = "~/images/Pizzas/" + pizza.ImageTitle + ".png";
                <div class="col-4 mb-5">
                    <img src="@imagePath" alt="" class="w-100" asp-append-version="true"/>
                    <a asp-area="" asp-page="/Checkout/Checkout"
                       asp-route-ImageTitle="@pizza.ImageTitle"
                       asp-route-PizzaPrice="@pizza.FinalPrice"
                       class="btn btn-primary mt-1">
                        Get this pizza
                    </a>
                    <br/>
                </div>
            }
        </div>
    </div>
</div>